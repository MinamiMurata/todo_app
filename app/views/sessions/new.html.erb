<div class="text-center">
  <h2 class="mb-4 fw-normal">Log in</h2>
  <%= form_with(scope: :session, url: sessions_path, local: true, class: "form-group") do |f| %>

    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, 'パスワード', class: "mt-3" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.submit "Log in", class: "form-control mt-4 btn btn-primary btn-lg" %>
  <% end %>
</div>