<h4>管理画面</h4>

<div class="mt-3"><%= link_to 'ユーザー新規登録', new_admin_user_path, type: "button", class: "btn btn-primary mb-3" %></div>

<table class="table">
  <thead>
    <tr>
      <th class="col-3">ユーザーID：ユーザー名</th>
      <th class="col-2">タスク数</th>
      <th class="col-2">管理者権限</th>
      <th class="col-2" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %> ： <%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin_i18n %></td>
        <td><%= link_to '詳細', admin_user_path(user.id), type: "button", class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to '編集', edit_admin_user_path(user.id), type: "button", class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' }, type: "button", class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
