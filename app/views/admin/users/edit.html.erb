<h4 class="mb-4 fw-normal">ユーザー編集画面</h4>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@user.errors.count, "つのエラー") %> があり、<%= @user.name %> の情報が登録できませんでした:</h4>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with(model: @user, local: true, url: admin_user_path) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email, class: "mt-3" %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, class: "mt-3" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, class: "mt-3" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.label :admin, class: "mt-3" %>
    <%= f.check_box :admin, {}, "admin_user", "general_user" %>

    <div class="mt-4"><%= f.submit %></div>
  <% end %>

<p class="mt-3"><%= link_to '戻る', admin_users_path %></p>