<h3>タスク一覧</h3>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, class: "form-control me-2", type: "search", placeholder: "検索" %>
  <%= form.select :status, Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]}, { include_blank: "指定なし" } %>
  <%= form.submit '検索', name: nil %>
<% end %>

<p><%= notice %></p>

<%= link_to "▼終了期限順", tasks_path(sort_expired: "true") %>
<%= link_to "▼優先度順", tasks_path(sort_priority: "true") %>
<table class="table">
  <thead>
    <tr>
      <th>タスク名</th>
      <th>詳しい内容</th>
      <th>タスク作成日時</th>
      <th>タスク終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l task.created_at, format: :short %></td>
        <td><%= l task.deadline, format: :short %></td>
        <td><%= task.status_i18n %></td>
        <td><%= task.priority_i18n %></td>
        <td><%= link_to '詳細', task_path(task.id), type: "button", class: "btn btn-outline-primary" %></td>
        <td><%= link_to '編集', edit_task_path(task.id), type: "button", class: "btn btn-outline-success"  %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか?' }, type: "button", class: "btn btn-outline-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>

<p><%= link_to 'タスクを登録する', new_task_path %></p>
