<h2>タスク一覧</h2>

<p><%= notice %></p>

<%= link_to "▼終了期限順", tasks_path(sort_expired: "true") %>
<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク作成日時</th>
      <th>タスク終了期限</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.title %></td>
        <td><%= l task.created_at, format: :short %></td>
        <td><%= l task.deadline, format: :short %></td>
        <td><%= link_to '詳細', task_path(task.id) %></td>
        <td><%= link_to '編集', edit_task_path(task.id) %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'タスクを登録する', new_task_path %></p>
